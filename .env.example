# Configuración de NLP
# Switch para controlar el uso de Spacy vs Tabiya
NLP_USE_TABIYA=True  # Habilitar/deshabilitar Tabiya
NLP_MIN_TEXT_LENGTH=100  # Longitud mínima para usar Tabiya
NLP_MAX_REQUESTS_PER_MINUTE=100  # Limite de requests a Tabiya

# Configuración de Tabiya Technologies
# Solo necesario si NLP_USE_TABIYA=True
TABIYA_API_KEY=your_tabiya_api_key_here
TABIYA_API_URL=https://api.tabiya.ai
TABIYA_TIMEOUT=30  # Timeout en segundos
TABIYA_RETRY_ATTEMPTS=3  # Intentos de reintentar
TABIYA_CACHE_TTL=3600  # TTL del cache en segundos

# Configuración específica por unidad de negocio
# Estas configuraciones se pueden ajustar según las necesidades de cada BU
# Amigro
TABIYA_AMIGRO_MODEL_VERSION=v1.0
TABIYA_AMIGRO_SKILLS_THRESHOLD=0.7
TABIYA_AMIGRO_EXPERIENCE_THRESHOLD=0.6
TABIYA_AMIGRO_CULTURE_THRESHOLD=0.8

