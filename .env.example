# AI HuntRED Environment Variables Example
# Copy this file to .env and fill in the actual values

# Django Settings
DJANGO_SECRET_KEY=your-very-secret-key-here
DEBUG=False
ALLOWED_HOSTS=ai.huntred.com,www.huntred.com

# Database Configuration
DB_NAME=g_huntred_ai_db
DB_USER=g_huntred_pablo
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@huntred.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# API Keys
MESSAGEBIRD_API_KEY=your-messagebird-api-key
WHATSAPP_API_TOKEN=your-whatsapp-api-token
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
OPENAI_API_KEY=your-openai-api-key

# Security Settings
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# NTFY Configuration
NTFY_ENABLED=True
NTFY_API_TOKEN=your-ntfy-api-token
NTFY_USERNAME=your-ntfy-username
NTFY_PASSWORD=your-ntfy-password