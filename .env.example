# HuntRED® v2 - Complete System Environment Configuration

# ====================================
# DATABASE CONFIGURATION
# ====================================
DATABASE_URL=postgresql://ghuntred:ghuntred_password@localhost:5432/ghuntred_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ghuntred_db
DB_USER=ghuntred
DB_PASSWORD=ghuntred_password

# ====================================
# JWT AUTHENTICATION
# ====================================
SECRET_KEY=huntred_v2_secret_key_change_in_production_please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ====================================
# APPLICATION SETTINGS
# ====================================
APP_NAME=HuntRED-v2-Complete
APP_VERSION=2.0.0-complete
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# ====================================
# SERVER CONFIGURATION
# ====================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# ====================================
# REDIS CONFIGURATION (for Celery)
# ====================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ====================================
# CELERY CONFIGURATION
# ====================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=America/Mexico_City

# ====================================
# WHATSAPP INTEGRATION
# ====================================
WHATSAPP_WEBHOOK_VERIFY_TOKEN=huntred_whatsapp_verify_token
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# ====================================
# MEXICO PAYROLL CONFIGURATION
# ====================================
# UMA 2024 (Unidad de Medida y Actualización)
UMA_DAILY_2024=108.57
UMA_MONTHLY_2024=3257.10
UMA_ANNUAL_2024=39084.00

# IMSS Configuration
IMSS_EMPLOYER_RATE=0.204
IMSS_EMPLOYEE_RATE=0.025
IMSS_CESANTIA_VEJEZ_RATE=0.0315
IMSS_RETIRO_RATE=0.02
IMSS_INFONAVIT_RATE=0.05

# ISR Configuration
ISR_ANNUAL_EXEMPT_AMOUNT=125900.00
ISR_SUBSIDY_ENABLED=true

# ====================================
# GEOLOCATION SETTINGS
# ====================================
# Office locations for attendance validation
OFFICE_LOCATIONS_JSON=[
  {
    "name": "Oficina Centro",
    "latitude": 19.4326,
    "longitude": -99.1332,
    "radius_meters": 200
  },
  {
    "name": "Oficina Santa Fe",
    "latitude": 19.3910,
    "longitude": -99.2837,
    "radius_meters": 200
  }
]

# Default attendance validation radius (meters)
DEFAULT_ATTENDANCE_RADIUS=100

# ====================================
# EMAIL CONFIGURATION
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true
SMTP_FROM_EMAIL=noreply@huntred.com
SMTP_FROM_NAME=HuntRED Sistema

# ====================================
# FILE STORAGE
# ====================================
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# ====================================
# SECURITY SETTINGS
# ====================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ====================================
# LOGGING CONFIGURATION
# ====================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/huntred_v2.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ====================================
# MONITORING & HEALTH CHECKS
# ====================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# ====================================
# TIMEZONE CONFIGURATION
# ====================================
TIMEZONE=America/Mexico_City
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# ====================================
# BUSINESS RULES
# ====================================
# Working hours
STANDARD_WORK_START_TIME=09:00
STANDARD_WORK_END_TIME=18:00
STANDARD_WORK_HOURS=8
LUNCH_BREAK_MINUTES=60

# Overtime rules
OVERTIME_RATE_DOUBLE=2.0
OVERTIME_RATE_TRIPLE=3.0
OVERTIME_THRESHOLD_HOURS=48

# Payroll periods
PAYROLL_PERIOD_TYPE=monthly  # weekly, biweekly, monthly
PAYROLL_CUTOFF_DAY=15

# ====================================
# DEVELOPMENT SETTINGS
# ====================================
# Only for development - remove in production
DEV_AUTO_LOGIN=false
DEV_SKIP_AUTH=false
DEV_MOCK_WHATSAPP=false
DEV_SAMPLE_DATA=true

# ====================================
# PRODUCTION SETTINGS
# ====================================
# Uncomment and configure for production
# HTTPS_ONLY=true
# SECURE_COOKIES=true
# CSRF_PROTECTION=true
# RATE_LIMITING=true
# MAX_REQUESTS_PER_MINUTE=100

# ====================================
# BACKUP CONFIGURATION
# ====================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# ====================================
# INTEGRATION SETTINGS
# ====================================
# External APIs
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3

# Webhook settings
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRIES=3
WEBHOOK_VERIFY_SSL=true