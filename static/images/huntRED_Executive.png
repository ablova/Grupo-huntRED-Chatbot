                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Gráfico de ML sobre contrataciones exitosas -->
            <div class="mt-8 mb-4">
                <h3 class="text-lg font-semibold mb-3" style="color: var(--hunt-blue);">Análisis Predictivo de Éxito</h3>
                <p class="text-sm text-gray-600 mb-4">Nuestro sistema de inteligencia artificial analiza patrones de contrataciones exitosas por industria y posición:</p>
                
                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="text-center">
                        <canvas id="mlChart" width="800" height="300"></canvas>
                    </div>
                    <p class="text-xs text-gray-500 mt-2 text-center">* Datos basados en nuestro historial de colocaciones exitosas con permanencia mayor a 1 año</p>
                </div>
                
                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Datos de ML sobre tasas de éxito de contratación por industria y posición
                    const ctx = document.getElementById('mlChart').getContext('2d');
                    
                    // Creamos el gráfico con datos basados en ML
                    const mlChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: ['Tecnología', 'Finanzas', 'Manufactura', 'Retail', 'Servicios', '{{ client.industry }}'],
                            datasets: [{
                                label: 'Tasa de Éxito (%)',
                                data: [87, 82, 75, 79, 81, 92],
                                backgroundColor: [
                                    'rgba(31, 53, 68, 0.7)',
                                    'rgba(31, 53, 68, 0.6)',
                                    'rgba(31, 53, 68, 0.5)',
                                    'rgba(31, 53, 68, 0.4)',
                                    'rgba(31, 53, 68, 0.3)',
                                    'rgba(255, 51, 0, 0.7)'
                                ],
                                borderColor: [
                                    'rgba(31, 53, 68, 1)',
                                    'rgba(31, 53, 68, 1)',
                                    'rgba(31, 53, 68, 1)',
                                    'rgba(31, 53, 68, 1)',
                                    'rgba(31, 53, 68, 1)',
                                    'rgba(255, 51, 0, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 100,
                                    title: {
                                        display: true,
                                        text: 'Tasa de Éxito (%)',
                                        color: '#1f3544'
                                    }
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Industria',
                                        color: '#1f3544'
                                    }
                                }
                            },
                            plugins: {
                                legend: {
                                    display: false
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return `Tasa de éxito: ${context.raw}%`;
                                        },
                                        afterLabel: function(context) {
                                            const industry = context.label;
                                            if (industry === '{{ client.industry }}') {
                                                return 'Predicción ML para su industria';
                                            }
                                            return null;
                                        }
                                    }
                                }
                            }
                        }
                    });
                });
                </script>
            </div>
        </section>
        
        <!-- Tabla de Contenidos -->
        <section class="mb-12 page-break">
            <h2 class="text-2xl font-bold mb-6 accent-gradient">Tabla de Contenidos</h2>
            <div class="section-divider"></div>
            
            <div class="my-8">
                <div class="toc-item">
                    <span class="font-medium">1. Información del Cliente</span>
                    <span class="toc-line"></span>
                    <span>3</span>
                </div>
                <div class="toc-item">
