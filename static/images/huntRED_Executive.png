    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar el gráfico de análisis de mercado laboral
            const ctx = document.getElementById('talentMarketChart').getContext('2d');
            
            const talentMarketChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Disponibilidad', 'Demanda', 'Rotación', 'Tiempo de Contratación', 'Ajuste Cultural'],
                    datasets: [{
                        label: 'Mercado General',
                        data: [45, 75, 25, 45, 65],
                        backgroundColor: 'rgba(53, 162, 235, 0.5)',
                        borderColor: 'rgba(53, 162, 235, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Nuestra Solución',
                        data: [72, 85, 18, 20, 90],
                        backgroundColor: 'rgba(255, 51, 0, 0.5)',
                        borderColor: 'rgba(255, 51, 0, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Índice de Eficacia (%)'
                            }
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Comparativa de Eficacia en Reclutamiento',
                            font: {
                                size: 16
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw + '%';
                                }
                            }
                        }
                    }
                }
            });
            
            // Elementos de pestaña
            const tabSummary = document.getElementById('tab-summary');
            const tabDetails = document.getElementById('tab-details');
            const tabMilestones = document.getElementById('tab-milestones');
            
            // Paneles de contenido
            const panelSummary = document.getElementById('panel-summary');
            const panelDetails = document.getElementById('panel-details');
            const panelMilestones = document.getElementById('panel-milestones');
            
            // Función para activar una pestaña
            function activateTab(tab, panel) {
                // Desactivar todas las pestañas
                [tabSummary, tabDetails, tabMilestones].forEach(t => {
                    t.classList.remove('border-blue-600', 'text-blue-600');
                    t.classList.add('border-transparent');
                });
                
                // Ocultar todos los paneles
                [panelSummary, panelDetails, panelMilestones].forEach(p => {
                    p.classList.add('hidden');
                });
                
                // Activar la pestaña seleccionada
                tab.classList.add('border-blue-600', 'text-blue-600');
                tab.classList.remove('border-transparent');
                
                // Mostrar el panel seleccionado
                panel.classList.remove('hidden');
            }
            
            // Event listeners para pestañas
            tabSummary.addEventListener('click', function(e) {
                e.preventDefault();
                activateTab(tabSummary, panelSummary);
            });
            
            tabDetails.addEventListener('click', function(e) {
                e.preventDefault();
                activateTab(tabDetails, panelDetails);
            });
            
            tabMilestones.addEventListener('click', function(e) {
                e.preventDefault();
                activateTab(tabMilestones, panelMilestones);
            });
            
            // Manejo de acordeones en preguntas frecuentes
            const accordionHeaders = document.querySelectorAll('.accordion-header');
            
            accordionHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    // Encontrar el elemento de contenido correspondiente
                    const content = this.nextElementSibling;
                    
                    // Toggle visibilidad
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        this.querySelector('i').classList.replace('fa-chevron-up', 'fa-chevron-down');
                    } else {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        this.querySelector('i').classList.replace('fa-chevron-down', 'fa-chevron-up');
                    }
                });
            });
            
            // Funcionalidad para el botón de guardar propuesta
            const btnGuardarPropuesta = document.getElementById('btnGuardarPropuesta');
            if (btnGuardarPropuesta) {
                btnGuardarPropuesta.addEventListener('click', function() {
                    // Verificar si hay firmas antes de guardar
                    const clienteSignature = document.querySelector('.firma-cliente');
                    const consultor = document.querySelector('.firma-consultor');
                    
                    if (!clienteSignature || !consultor) {
                        alert('Por favor, asegúrese de que la propuesta esté firmada por ambas partes antes de guardar.');
                        return;
                    }
                    
                    // Simular la acción de guardar con una animación
                    const originalText = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Guardando...';
                    this.disabled = true;
                    
                    // Simular una solicitud al servidor
                    setTimeout(() => {
                        // Mostrar mensaje de éxito
                        this.innerHTML = '<i class="fas fa-check mr-2"></i>Propuesta Guardada';
                        this.classList.remove('bg-red-600', 'hover:bg-red-700');
                        this.classList.add('bg-green-600', 'hover:bg-green-700');
                        
                        // Notificar al usuario
                        alert('La propuesta ha sido guardada exitosamente. Se ha enviado una copia a su correo electrónico.');
                        
                        // Volver al estado original después de unos segundos
                        setTimeout(() => {
                            this.innerHTML = originalText;
                            this.classList.remove('bg-green-600', 'hover:bg-green-700');
                            this.classList.add('bg-red-600', 'hover:bg-red-700');
                            this.disabled = false;
                        }, 3000);
                    }, 2000);
                });
            }
        });
        </script>

