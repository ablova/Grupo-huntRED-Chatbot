# Configuración de Django
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=*.huntred.com,your-domain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Configuración de Base de Datos
DB_NAME=g_huntred_ai_db
DB_USER=huntreddbusr
DB_PASSWORD=your-secure-password-here
DB_HOST=db
DB_PORT=5432
DB_CONNECT_TIMEOUT=10

# Configuración de Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Configuración de Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Configuración de Email
EMAIL_HOST=mail.huntred.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=hola@huntred.com
EMAIL_HOST_PASSWORD=your-email-password-here
DEFAULT_FROM_EMAIL=Grupo huntRED® <hola@huntred.com>

# Configuración de Sentry para monitoring
SENTRY_DSN=your-sentry-dsn-here
SENTRY_SAMPLE_RATE=0.2
SENTRY_SEND_PII=False

# Configuración de API WhatsApp
WHATSAPP_API_URL=your-whatsapp-api-url
WHATSAPP_API_TOKEN=your-whatsapp-api-token

# Configuración de API Telegram
TELEGRAM_API_TOKEN=your-telegram-api-token

# Configuración de PayPal
PAYPAL_MODE=live
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_RETURN_URL=https://your-domain.com/pagos/paypal/return/
PAYPAL_CANCEL_URL=https://your-domain.com/pagos/paypal/cancel/

# Configuración de Stripe
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Configuración de WordPress
WORDPRESS_API_URL=https://your-wordpress-site.com/wp-json/
WORDPRESS_USERNAME=your-wordpress-username
WORDPRESS_PASSWORD=your-wordpress-password

# Configuración de Rate Limiting
THROTTLE_ANON=100/day
THROTTLE_USER=1000/day

# Configuración de CORS
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# Configuración de Business Units
DEFAULT_BUSINESS_UNIT=huntRED

# Configuración de OpenAI para chatbot
OPENAI_API_KEY=your-openai-api-key

# Configuración de SmartRecruiters (para importación de candidatos)
SMARTRECRUITERS_USERNAME=pablo@huntred.com
SMARTRECRUITERS_PASSWORD=Latituded800!
SMARTRECRUITERS_API_TOKEN=your-smartrecruiters-api-token
